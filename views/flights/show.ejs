<%- include('../partials/header') %>

<section id="show-page">
    <div>Airline:</div>
    <div><%= flight.airline %></div>
    <div>Airport: </div>
    <div><%= flight.airport %></div>
    <div>Flight Number: </div>
    <div><%= flight.flightNo %></div>
    <div>Departure Date: </div>
    <div><%= flight.departs %></div>
</section>

<hr>

<h2>Add Destinations</h2>
<form id="add-destination-form" method="POST"
  action="/flights/<%= flight._id %>/destinations">
  <label>Airport:
    <select name="airport">
      <option value="ATL">ATL</option>
      <option value="AUS">AUS</option>
      <option value="CLT">CLT</option>
      <option value="DEN">DEN</option>
      <option value="DFW">DFW</option>
      <option value="JFK">JFK</option>
      <option value="LAS">LAS</option>
      <option value="LAX">LAX</option>
      <option value="MCO">MCO</option>
      <option value="ORD">ORD</option>
      <option value="SAN">SAN</option>
      <option value="SEA">SEA</option>
    </select>
  </label><br>
  <label>Arrival Date:
    <input type="datetime-local" name="arrival" value="<%= new Date(new Date().setFullYear(new Date().getFullYear() + 1)).toISOString().slice(0, 16) %>">
</label><br>
  <input type="submit" value="Add Destination">
</form>

<hr>

<% if (flight.destinations.length) { %>
    <table>
      <thead>
        <tr>
          <th>Airport</th>
          <th>Arrvial Date</th>
        </tr>
      </thead>
      <tbody>
        <% flight.destinations.forEach(function(d) { %>
          <tr>
            <!-- .toLocaleDateString() provides a more friendly date format -->
            <td><%= d.airport %></td>
            <td><%= d.arrival.toLocaleDateString() %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <h5>No destinations added.</h5>
  <% } %>


<%- include('../partials/footer') %>